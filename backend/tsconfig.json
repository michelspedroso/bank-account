{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": true,
    "types": ["mocha"],
    "typeRoots": ["overrides", "node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}